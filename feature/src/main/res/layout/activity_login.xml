<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".login">


    <EditText
            android:layout_width="305dp"
            android:layout_height="35dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Clave"
            android:paddingLeft="5dp"
            android:background="@drawable/cajas_redondas"
            android:id="@+id/clave"
            android:textColorLink="@color/colorPrimaryDark"
            android:textAlignment="textStart" android:layout_alignParentEnd="true" android:layout_marginEnd="39dp"
            android:layout_alignParentStart="true" android:layout_marginStart="40dp"
            android:layout_marginTop="16dp" android:layout_below="@+id/editText3" android:layout_above="@+id/btnentrar"
            android:layout_marginBottom="29dp"/>
    <Button
            android:text="INGRESAR"
            android:layout_width="305dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"

            android:background="@color/boton"
            android:id="@+id/btnentrar"
            android:layout_marginBottom="182dp" android:layout_alignParentStart="true"
            android:layout_marginStart="40dp" android:layout_alignParentEnd="true" android:layout_marginEnd="39dp"
            android:textAlignment="center" android:textColor="#464646" android:textSize="16sp"
            android:onClick="Iniciar"/>
    <EditText
            android:layout_width="243dp"
            android:layout_height="34dp"
            android:paddingLeft="5dp"
            android:background="@drawable/cajas_redondas"
            android:inputType="textPersonName"
            android:hint="Usuario"
            android:ems="10"
            android:layout_alignParentTop="true" android:id="@+id/editText3"
            android:layout_marginTop="208dp" android:layout_alignParentEnd="true"
            android:layout_marginEnd="38dp" android:layout_alignParentStart="true" android:layout_marginStart="39dp"/>
    <Switch
            android:text="Recordar Usuario y clave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/switch1" android:layout_marginBottom="135dp"
            android:textSize="10sp" android:switchPadding="5dp"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="60dp">

    </android.support.design.widget.TextInputLayout>
    <TextView
            android:text="Has olvidado tu usuario y clave?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/textView" android:layout_marginBottom="52dp"
            android:textAlignment="center" android:textStyle="bold" android:textSize="10sp"/>
</RelativeLayout>